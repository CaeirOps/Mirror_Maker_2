{
  "dashboard": {
    "id": null,
    "uid": "kafka-cluster-overview",
    "title": "Kafka Cluster Overview",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Total Topics per Cluster",
        "datasource": "${DS_PROMETHEUS}",
        "targets": [
          {
            "expr": "sum(kafka_topics{job=\"kafka-exporter\"})",
            "legendFormat": "Total Topics"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        }
      },
      {
        "type": "stat",
        "title": "Total Partitions per Cluster",
        "datasource": "${DS_PROMETHEUS}",
        "targets": [
          {
            "expr": "sum(kafka_topic_partition_count{job=\"kafka-exporter\"})",
            "legendFormat": "Total Partitions"
          }
        ],
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        }
      },
      {
        "type": "stat",
        "title": "Consumer Group Lag per Cluster",
        "datasource": "${DS_PROMETHEUS}",
        "targets": [
          {
            "expr": "sum(kafka_consumer_group_current_offset - kafka_consumer_group_lag{job=\"kafka-exporter\"})",
            "legendFormat": "Lag"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 6,
          "h": 4
        }
      },
      {
        "type": "stat",
        "title": "Messages In per Second",
        "datasource": "${DS_PROMETHEUS}",
        "targets": [
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_messagesin_total[1m]))",
            "legendFormat": "In/sec"
          }
        ],
        "gridPos": {
          "x": 6,
          "y": 4,
          "w": 6,
          "h": 4
        }
      },
      {
        "type": "stat",
        "title": "Messages Out per Second",
        "datasource": "${DS_PROMETHEUS}",
        "targets": [
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_bytesout_total[1m]))",
            "legendFormat": "Out/sec"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        }
      }
    ]
  },
  "overwrite": true,
  "inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ]
}