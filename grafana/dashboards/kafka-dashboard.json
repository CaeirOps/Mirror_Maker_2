{
  "title": "Kafka Cluster Dashboard",
  "panels": [
    {
      "type": "stat",
      "title": "Total Topics per Cluster",
      "targets": [
        {
          "expr": "count(kafka_topic_partitions{cluster=\"$cluster\"}) by (topic)",
          "format": "time_series"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Partitions per Cluster",
      "targets": [
        {
          "expr": "sum(kafka_topic_partitions{cluster=\"$cluster\"})",
          "format": "time_series"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Consumer Groups",
      "targets": [
        {
          "expr": "count(kafka_consumergroup_lag{cluster=\"$cluster\"}) by (consumergroup)",
          "format": "time_series"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "table",
      "title": "Consumer Group Lag Details",
      "targets": [
        {
          "expr": "kafka_consumergroup_lag{cluster=\"$cluster\"}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "displayMode": "color-text",
            "filterable": true
          }
        }
      },
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 }
    },
    {
      "type": "table",
      "title": "Consumer Group Topics",
      "targets": [
        {
          "expr": "kafka_consumergroup_topic_current_offset{cluster=\"$cluster\"}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "displayMode": "color-text",
            "filterable": true
          }
        }
      },
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "cluster",
        "label": "Cluster",
        "datasource": "Prometheus",
        "query": "label_values(kafka_topic_partitions, cluster)",
        "multi": false,
        "includeAll": false,
        "refresh": 1
      }
    ]
  }
}