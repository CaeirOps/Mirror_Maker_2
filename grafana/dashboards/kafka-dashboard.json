{
  "title": "Kafka Replication Dashboard",
  "tags": ["kafka", "replication"],
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "cluster",
        "type": "query",
        "label": "Cluster",
        "datasource": "Prometheus",
        "query": "label_values(kafka_topic_partition_current_offset, cluster)",
        "includeAll": false,
        "multi": false
      },
      {
        "name": "consumergroup",
        "type": "query",
        "label": "Consumer Group",
        "datasource": "Prometheus",
        "query": "label_values(kafka_consumergroup_lag, consumergroup)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "title": "Total Topics per Cluster",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "count(kafka_topic_partition_current_offset{cluster=\"$cluster\"}) by (topic)",
          "format": "time_series"
        }
      ]
    },
    {
      "title": "Total Consumer Groups",
      "type": "stat",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "count(kafka_consumergroup_lag{cluster=\"$cluster\"}) by (consumergroup)",
          "format": "time_series"
        }
      ]
    },
    {
      "title": "Lag by Consumer Group and Partition",
      "type": "table",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "kafka_consumergroup_lag{cluster=\"$cluster\", consumergroup=\"$consumergroup\"}",
          "format": "table"
        }
      ],
      "columns": [
        { "text": "Consumer Group", "value": "consumergroup" },
        { "text": "Topic", "value": "topic" },
        { "text": "Partition", "value": "partition" },
        { "text": "Lag", "value": "value" }
      ]
    },
    {
      "title": "Offsets by Topic and Partition",
      "type": "table",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "kafka_topic_partition_current_offset{cluster=\"$cluster\"}",
          "format": "table"
        }
      ],
      "columns": [
        { "text": "Topic", "value": "topic" },
        { "text": "Partition", "value": "partition" },
        { "text": "Offset", "value": "value" }
      ]
    },
    {
      "title": "Total Messages per Topic",
      "type": "table",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(kafka_topic_partition_current_offset{cluster=\"$cluster\"}) by (topic)",
          "format": "table"
        }
      ],
      "columns": [
        { "text": "Topic", "value": "topic" },
        { "text": "Messages", "value": "value" }
      ]
    }
  ]
}