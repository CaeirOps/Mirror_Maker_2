{
  "id": null,
  "uid": "kafka-cluster-overview",
  "title": "Kafka Cluster Overview",
  "tags": ["kafka", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Topics per Cluster",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kafka_topics{cluster=\"$cluster\"})",
          "legendFormat": "Total Topics",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Total Partitions per Cluster",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kafka_topic_partitions{cluster=\"$cluster\"})",
          "legendFormat": "Total Partitions",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Consumer Group Lag per Cluster",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kafka_consumergroup_lag{cluster=\"$cluster\"})",
          "legendFormat": "Consumer Lag",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 3, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Messages In per Second",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(kafka_topic_partition_bytes_in_total[5m])",
          "legendFormat": "Messages In",
          "refId": "D"
        }
      ],
      "gridPos": { "x": 6, "y": 3, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Messages Out per Second",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(kafka_topic_partition_bytes_out_total[5m])",
          "legendFormat": "Messages Out",
          "refId": "E"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 6, "h": 3 }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "cluster",
        "label": "Kafka Cluster",
        "datasource": "Prometheus",
        "query": "label_values(kafka_topics, cluster)",
        "current": { "text": "All", "value": "$__all" },
        "allValue": null,
        "includeAll": true
      }
    ]
  }
}