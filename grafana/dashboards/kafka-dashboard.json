{
  "id": null,
  "title": "Kafka Cluster Overview",
  "tags": ["kafka", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "title": "Total Topics per Cluster",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum by(cluster) (kafka_topics)",
          "legendFormat": "{{cluster}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Total Partitions per Cluster",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum by(cluster) (kafka_partitions)",
          "legendFormat": "{{cluster}}",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Consumer Group Lag per Cluster",
      "type": "time-series",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6},
      "targets": [
        {
          "expr": "sum by(cluster, group) (kafka_consumer_group_lag)",
          "legendFormat": "{{cluster}} - {{group}}",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Messages In per Second",
      "type": "stat",
      "gridPos": {"x": 0, "y": 10, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "rate(kafka_messages_in[1m])",
          "legendFormat": "{{cluster}}",
          "refId": "D"
        }
      ]
    },
    {
      "title": "Messages Out per Second",
      "type": "stat",
      "gridPos": {"x": 6, "y": 10, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "rate(kafka_messages_out[1m])",
          "legendFormat": "{{cluster}}",
          "refId": "E"
        }
      ]
    }
  ]
}